{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "almond",
  "name": "Megaport API Documentation",
  "colors": {
    "primary": "#E40046",
    "light": "#E40046",
    "dark": "#E40046"
  },
  "fonts": {
    "family": "Mulish"
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": {
      "theme": {
        "dark": "github-dark-high-contrast",
        "light": "github-light-high-contrast"
      }
    }
  },
  "interaction": { "drilldown": false },
  "appearance": {
    "default": "system",
    "strict": false
  },

  "favicon": "/logo/favicon.svg",
  "thumbnails": {
    "appearance": "light",
    "background": "/logo/Vertical Megaport Logo_RGB-WEB-01.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": [
              "api-reference/introduction",
              "api-reference/release-notes"
            ]
          },
          {
            "group": "Reference",
            "openapi": "/api-reference/openapi.json"
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/Megaport-Logo_RBG-WEB-01.svg",
    "dark": "/logo/Megaport-Logo_RBG-WEB-03.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  },
  "errors": {
    "404": {
      "redirect": false,
      "title": "Well, this is awkward.",
      "description": "Something seems to be wrong and we can't find that file.\nTry our search or our navigation links to see if you can find another way to view the info you need.\nHere's a list of possible reasons for the error:\n- Mistyped URL\n- Copy-and-paste error\n- Broken link\n- Truncated link\n- Moved content\n- Deleted content"
    }
  }
}
